<div class="form-container">
  <%= form_with model: @food, class: "form-input" do |form| %>
    <div class="form-group">
      <%= form.label :name, "Name", class: "form-label" %>
      <%= form.text_field :name, placeholder: "Name", required: true, autofocus: true, class: "form-input" %>
    </div>
    <div class="form-group">
      <%= form.label :quantity, "Quantity", class: "form-label" %>
      <%= form.number_field :quantity, placeholder: 0, required: true, autofocus: true, class: "form-input" %>
    </div>
    <div class="form-group">
      <%= form.label :measurement, "", class: "form-label" %>
      <%= form.text_field :measurement, placeholder: "kg", required: true, autofocus: true, class: "form-input" %>
    </div>
    <div class="form-group">
      <%= form.label :price, "Price", class: "form-label" %>
      <%= form.number_field :price, placeholder: 100, required: true, autofocus: true, class: "form-input" %>
    </div>
    <div class="form-group">
      <%= form.submit "Add Food", data: { disable_with: "Loading" }, class: "form-submit" %>
    </div>
  <% end %>
</div>




